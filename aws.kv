#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<MyScreenManager>:
    id: screen_manager
    transition: FadeTransition()
    HomeScreen:
        id: homeScreen
    PluginsScreen:
        id: pluginsScreen

<HomeScreen>:
    name: 'home'
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'AWS Audit Tool'
                with_previous: False
            ActionOverflow:
                mode: "spinner"
            ActionButton:
                text: 'Btn0'
            ActionButton:
                text: 'Btn1'
            ActionButton:
                text: 'Btn2'
            ActionButton:
                text: 'Btn3'
            ActionGroup:
                text: 'grp1'
                ActionButton:
                    text: 'Btn4'
                ActionButton:
                    text: 'Btn5'
    BoxLayout:
        orientation: 'horizontal'
        ScrollView:
            size: self.size
            GridLayout:
                cols: 1
                padding: 0,50,0,0
                orientation: 'vertical'
                Button:
                    text: 'plugins'
                    font_size: 20
                    on_release: app.root.current = 'plugins'
                Button:
                    text: 'get ec2 data'
                    font_size: 20
                    on_release: app.root.doStuff()
        Label:
            text: root.text
            font_size: 30
            text_size: self.size
            halign: 'left'
            valign: 'middle'

<PluginsScreen>:
    name: 'plugins'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'second screen!'
            font_size: 30
        BoxLayout:
            Button:
                text: 'goto home screen'
                font_size: 30
                on_release: app.root.current = 'home'
                size_hint: .3, .3
            Button:
                text: 'get ec2 data'
                font_size: 30
                on_release: app.root.doStuff()
                size_hint: .3, .3
