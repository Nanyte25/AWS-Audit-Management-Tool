#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import main AWSApp

MainWindow:

<MainWindow>:
    list_view: list_view
    orientation: "vertical"
    cols:1
    padding: 10
    spacing: 10
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "load"
            on_release: root.update()
        Button:
            text: "plugins"
    BoxLayout:
        ListView:
            id: list_view
            adapter:
                ListAdapter(data=root.data, cls=main.StudentListButton)
    Widget:
        id: separator
        size_hint_y: None
        height: 6
        canvas:
            Color:
                rgb: 1., 0., 0.
            Rectangle:
                pos: 0, separator.center_y
                size: separator.width, 2

    MyScreenManager:

<MyScreenManager>:
    id: "manager"
    HomeScreen:
        name: "home"
    PluginsScreen:
        name: "plugins"

<HomeScreen>:
    id: "home"
    orientation: "vertical"
    padding: 10
    spacing: 10
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Plugins"
            on_release: root.switch_to("plugins")
        Button:
            text: "A button"

<PluginsScreen>
    id: "plugins"
    orientation: "vetical"
    padding: 10
    spacing: 10
    Label:
        text: "test text"
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Home"
            on_release: root.switch_to("home")
        Button
            text: "A button"
