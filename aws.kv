#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<MyScreenManager>:
    id: screen_manager
    transition: FadeTransition()
    HomeScreen:
        id: homeScreen
    PluginsScreen:
        id: pluginsScreen

<HomeScreen>:
    name: 'home'
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'AWS Audit Tool'
                with_previous: False
            ActionOverflow:
                mode: "spinner"
            ActionButton:
                text: 'Btn0'
            ActionButton:
                text: 'Btn1'
    BoxLayout:
        orientation: 'horizontal'
        GridLayout:
            cols: 1
            padding: 0,50,0,0
            orientation: 'vertical'
            row_default_height: 100
            row_force_default: True
            col_default_width: 200
            col_force_default: True
            Button:
                text: 'plugins'
                font_size: 20
                on_release: app.root.current = 'plugins'
            Button:
                text: 'ec2'
                font_size: 20
                on_release: app.root.doEc2Stuff()
            Button:
                text: 's3'
                font_size: 20
                on_release: app.root.doS3Stuff()
        Label:
            text: root.text
            font_size: 30
            text_size: self.size
            halign: 'left'
            valign: 'middle'

<PluginsScreen>:
    name: 'plugins'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.text
        BoxLayout:
            Button:
                text: 'goto home screen'
                font_size: 30
                on_release: app.root.current = 'home'
                size_hint: .3, .3
            Button:
                text: 'Configured Services'

                on_release: app.root.doConfiguredServices()
                size_hint: .3, .3
            Button:
                text: 'Configured Plugins'
                on_release: app.root.doConfiguredPlugins()
                size_hint: .3, .3
